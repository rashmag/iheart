<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Auth.RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_line_edittext"
        android:text="Регистрация"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:id="@+id/titleReg"
        android:fontFamily="@font/manrope_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="45dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Имя, фамилия"
        android:fontFamily="@font/manrope_medium"
        android:textSize="14sp"
        android:textColor="@color/registText"
        android:id="@+id/titleNamAndSureName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleReg"
        android:layout_marginTop="27dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Имя"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:gravity="center_horizontal"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/bottom_line_edittext"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/titleNamAndSureName"
        android:textSize="20sp"
        android:id="@+id/nameAndSureName"
        android:fontFamily="@font/manrope_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата рождения"
        android:textColor="@color/registText"
        android:fontFamily="@font/manrope_medium"
        android:textSize="14sp"
        android:id="@+id/titleDataBirthday"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameAndSureName"
        android:layout_marginTop="28dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="01"
        android:maxLength="2"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:background="@drawable/bottom_line_edittext"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/titleDataBirthday"
        android:textSize="20sp"
        android:textColorHint="@android:color/darker_gray"
        android:id="@+id/dayBirthday"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/manrope_regular"
        app:layout_constraintEnd_toStartOf="@+id/monthBirthday"
        android:layout_marginTop="16dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:hint="11"
        android:maxLength="2"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:background="@drawable/bottom_line_edittext"
        app:layout_constraintTop_toBottomOf="@+id/titleDataBirthday"
        android:textSize="20sp"
        android:textColorHint="@android:color/darker_gray"
        android:id="@+id/monthBirthday"
        android:fontFamily="@font/manrope_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:hint="1997"
        android:maxLength="4"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:background="@drawable/bottom_line_edittext"
        app:layout_constraintTop_toBottomOf="@+id/titleDataBirthday"
        android:textSize="20sp"
        android:id="@+id/yearBirthday"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/manrope_regular"
        app:layout_constraintStart_toEndOf="@+id/monthBirthday"
        android:layout_marginTop="16dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registBtn"
        android:layout_width="336dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="124dp"
        android:background="@drawable/btn_fill_rules"
        android:fontFamily="@font/manrope_semi_bold"
        android:text="Зарегистрироваться"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/manrope_bold"
        android:gravity="center"
        android:text="© iHeart, 2020"
        android:textColor="#24000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/direction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/direction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/manrope_regular"
        android:gravity="center"
        android:text="Подготовлено командой EDUCATED! в рамках участия во всероссийском хакатоне “Цифровой Прорыв”."
        android:textColor="#24000000"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ваш пол"
        android:textColor="@color/registText"
        android:fontFamily="@font/manrope_medium"
        android:textSize="14sp"
        android:id="@+id/yourGender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/monthBirthday"
        android:layout_marginTop="10dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radioGroupGender"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yourGender">

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@drawable/check"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Мужской"
            android:textColor="@android:color/black" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:button="@drawable/check"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Женский"
            android:textColor="@android:color/black" />
    </RadioGroup>

    <TextView
        android:id="@+id/titleEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/manrope_medium"
        android:text="Электронная почта"
        android:textColor="@color/registText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupGender" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/manrope_regular"
        android:hint="логин"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:gravity="center_horizontal"
        android:background="@drawable/bottom_line_edittext"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleEmail"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/titlePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/manrope_medium"
        android:text="Пароль"
        android:textColor="@color/registText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/manrope_regular"
        android:hint="пароль"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="20sp"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:inputType="textPassword"
        android:gravity="center_horizontal"
        android:background="@drawable/bottom_line_edittext"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlePassword"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/manrope_semi_bold"
        android:gravity="center"
        android:text="Вход"
        android:id="@+id/titleEntrance"
        android:textColor="@color/mainColor"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>